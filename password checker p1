
#only password seyting by user is missing

password = 'Password123'
i=0
while i<3:
    in_pass = input('Inputed password the password(type h/H for hint)(' + str(3-i) + 'no of attempts left)')
    in_pass = str(in_pass)
    if in_pass == 'h' or in_pass == 'H':
        print("pas123")
        continue
    elif password == in_pass:
        print('Correct pass')
        break
    else:
        print('wrong pass')
        i+=1
